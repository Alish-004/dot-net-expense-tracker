@page "/home"

<PageTitle>Home</PageTitle>

<NavMenu></NavMenu>

<div class="home-container">
    <!-- Welcome Section -->
    <div class="welcome">
        <h1>Welcome Back, Admin!</h1>
        <p>Track your spending, set your goals, and achieve financial freedom!</p>
    </div>

    <!-- Stats Overview -->
    <div class="stats-container">
        <div class="stat-box">
            <h3>Total Expenses</h3>
            <p>$0.00</p>
        </div>
        <div class="stat-box">
            <h3>Remaining Budget</h3>
            <p>$0.00</p>
        </div>
    </div>

    <!-- Financial Goals & Progress -->
    <div class="goal-progress">
        <h2>Your Financial Goal</h2>
        <p>Goal: $500 savings this month</p>
        <div class="progress-bar">
            <div class="progress" style="width: 30%;"></div>
        </div>
        <p>Progress: $150 saved</p>
    </div>

    <!-- Motivational Section -->
    <div class="motivational">
        <h2>Stay on Track!</h2>
        <p>Tracking your expenses is the first step towards financial freedom. Make budgeting a habit, and you'll see progress!</p>
    </div>

    <!-- Main Actions -->
    <div class="home-actions">
        <a href="/add-expense" class="btn btn-primary">Add Expense</a>
        <a href="/view-expenses" class="btn btn-secondary">View Expenses</a>
    </div>

    <!-- Quick Tips Section -->
    <div class="quick-tips">
        <h3>Quick Tips</h3>
        <ul>
            <li>Review your spending weekly.</li>
            <li>Set a savings target each month.</li>
            <li>Track all expenses, big or small.</li>
        </ul>
    </div>
</div>

<footer class="footer">
    <p>&copy; 2025 Expense Tracker. All rights reserved.</p>
</footer>

