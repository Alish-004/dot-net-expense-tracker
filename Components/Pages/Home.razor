@page "/home"

<PageTitle>Home</PageTitle>

<NavMenu></NavMenu>
<div class="home-container">
    <!-- Image at the top -->
    <img src="https://www.moneypatrol.com/moneytalk/wp-content/uploads/2023/07/budget509.png" alt="Expense Tracker" class="home-image" />

    <h1>Welcome Home ADMIN</h1>
    <p>"Take Control, Track Your Spending, Achieve Your Financial Goals."</p>

    <div class="home-actions">
        <a href="/add-expense" class="btn btn-primary">Add Expense</a>
        <a href="/view-expenses" class="btn btn-secondary">View Expenses</a>
    </div>
</div>

<footer class="footer">
    <p>&copy; 2025 Expense Tracker. All rights reserved.</p>
</footer>

<style>
    /* Basic Reset */
    body, html {
        margin: 0;
        padding: 0;
        height: 100%; /* Set full height for the body and html */
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        display: flex;
        flex-direction: column; /* Stack elements vertically */
        min-height: 100vh; /* Full viewport height */
    }

    .home-container {
        max-width: 800px;
        margin: 50px auto;
        text-align: center;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        flex: 1; /* Ensures the content area takes available space */
    }

    /* Style for the image */
    .home-image {
        width: 100%; /* Makes the image responsive */
        max-width: 800px; /* Set a maximum width */
        height: auto; /* Maintain aspect ratio */
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .home-container h1 {
        font-size: 2.5em;
        margin-bottom: 20px;
        color: #5e2a8c; /* Purple color */
    }

    .home-container p {
        font-size: 1.2em;
        margin-bottom: 30px;
        color: #555;
    }

    .home-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1em;
        text-decoration: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s; /* Add transition for smooth hover effect */
    }

    .btn-primary {
        background-color: #6f42c1; /* Purple color */
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #5a2c91; /* Darker purple */
            transform: scale(1.05); /* Slightly enlarge the button */
        }

    .btn-secondary {
        background-color: #6f42c1;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a2c91;
            transform: scale(1.05); /* Slightly enlarge the button */
        }

    .home-info, .home-benefits {
        margin-top: 40px;
        text-align: left;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
    }

        .home-info h2, .home-benefits h2 {
            color: #6f42c1;
            margin-bottom: 10px;
        }

        .home-info ul, .home-benefits ul {
            list-style-type: none;
            padding: 0;
        }

        .home-info li, .home-benefits li {
            font-size: 1.1em;
            color: #555;
            margin-bottom: 10px;
        }

    .footer {
        text-align: center;
        padding: 20px;
        background-color: #6f42c1;
        color: white;
        margin-top: auto; /* Push the footer to the bottom of the page */
    }
</style>

