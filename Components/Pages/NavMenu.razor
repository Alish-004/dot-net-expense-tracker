@using MudBlazor

<MudNavMenu Elevation="2" Class="nav-menu">
    <MudNavLink Href="/home" Icon="@Icons.Material.Filled.Home">
        <span class="nav-text">Home</span>
    </MudNavLink>
    <MudNavLink Href="/add-expense" Icon="@Icons.Material.Filled.AddCircle">
        <span class="nav-text">Add Expense</span>
    </MudNavLink>
    <MudNavLink Href="/view-expenses" Icon="@Icons.Material.Filled.ListAlt">
        <span class="nav-text">View Expenses</span>
    </MudNavLink>
    <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings">
        <span class="nav-text">Settings</span>
    </MudNavLink>

    <MudNavLink Href="/" Icon="@Icons.Material.Filled.Settings">
        <span class="nav-text">Logout</span>
    </MudNavLink>
