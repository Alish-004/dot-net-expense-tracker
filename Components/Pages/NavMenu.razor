<style>
    .nav-menu {
        position: fixed;
        top: 0;
        left: 0;
        width: 200px;
        height: 100%;
        background-color: #000000; /* Black background */
        color: white;
        padding: 20px 0;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }

    .mud-nav-link {
        color: white;
        font-size: 1.1em;
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px;
    }

        .mud-nav-link .mud-icon-button {
            font-size: 1.5em;
        }

    .nav-text {
        margin-left: 10px;
    }

    .mud-nav-link:hover {
        text-decoration: underline;
        background-color: rgba(255, 255, 255, 0.1); /* Light background on hover */
    }

        .mud-nav-link:hover .mud-icon-button {
            background-color: rgba(255, 255, 255, 0.1); /* Icon hover effect */
        }
</style>
